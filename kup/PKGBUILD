# Maintainer: Simone Gaiarin <simgunz@gmail.com>
 
pkgname=kup
pkgver=0.2
pkgrel=1
pkgdesc='KDE-based frontend for the very excellent bup backup software, that gives you easy and fast incremental backups!'
arch=('i686' 'x86_64')
url='http://kde-apps.org/content/show.php/Kup+Backup+System?content=147465'
license='GPL'
depends=('bup')
makedepends=('gcc' 'make' 'cmake')
source=("http://kde-apps.org/CONTENT/content-files/147465-${pkgname}-${pkgver}.tar.gz")
md5sums=('3ccd7622db49a8bbbe5936bbefe7c84f')
 
 
build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="$(kde4-config --prefix)" \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        ..
  make
}
 
package() {
  cd "$srcdir/$pkgname-$pkgver/build"
  make DESTDIR="$pkgdir" install
} 
