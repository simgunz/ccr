# Maintainer: Simone Gaiarin <simgunz@gmail.com>

pkgname=libnfs
pkgver=1.3.0
pkgrel=1
pkgdesc="client library for accessing NFS shares"
arch=('i686' 'x86_64')
url="https://github.com/sahlberg/libnfs"
license=('GPL')
depends=('glibc')
source=("$pkgname-$pkgver.tar.gz::https://github.com/sahlberg/libnfs/tarball/$pkgname-$pkgver")
_srcfolder=sahlberg-libnfs-47e5a2c
sha256sums=('0acda3029db699c3978684080843f71d222ad35b30a2ff0d220d144e98854948')
options=(!libtool)

build() {
  mv "$_srcfolder" "$pkgname-$pkgver"

  cd "$pkgname-$pkgver"

  autoreconf -vif
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
