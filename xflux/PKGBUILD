# Maintainer: Simone Gaiarin <simgunz@gmail.com>

pkgname=xflux
pkgver=20110628
pkgrel=0
pkgdesc="(f.lux for X) Changes monitor color temperature based on time of day and position in world to ease eye strain."
arch=('i686' 'x86_64')
license=('Custom')
url="http://www.stereopsis.com/flux/"
if [ "${CARCH}" = "x86_64" ]; then
depends=('x-server' 'lib32-libxxf86vm' 'lib32-libstdc++5')
elif [ "${CARCH}" = "i686" ]; then
depends=('x-server' 'libxxf86vm' 'libstdc++5')
fi
provides=()
conflicts=()
makedepends=()
optdepends=()
source=('http://secure.herf.org/flux/xflux.tgz')
noextract=()
md5sums=('26c95e260fdca0fc3b684a416f672163')

build() {
	mkdir -p $startdir/pkg/usr/bin
	cd $startdir/src
	cp xflux $startdir/pkg/usr/bin
}
