# Maintainer: Simone Gaiarin <simgunz@gmail.com>

pkgname=kdeplasma-addons-applets-workflow
pkgver=0.1.99
pkgrel=2
name=plasmoid-workflow
pkgdesc="A KDE Plasmoid that integrates Activities, Virtual Desktops and Tasks Functionalities from Plasma Desktop in just one component."
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/WorkFlow+Plasmoid+(It's+Here!!!)?content=147428"
license=('GPL')
depends=('kde-workspace>=4.8')
makedepends=('gcc' 'cmake' 'automoc4')
source=("http://opentoolsandspace.org/Art/WorkFlow/${name}-${pkgver}.tar.gz")
md5sums=('360ad1182758922e859fce87f570e99b')

build() {
  mkdir -p "$srcdir/build"
  cd "$srcdir/build"
  cmake "$srcdir/${name}-${pkgver}" -DCMAKE_INSTALL_PREFIX="$(kde4-config --prefix)"
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="$pkgdir/" install
}
