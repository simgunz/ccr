# Maintainer: Simone Gaiarin <simgunz@gmail.com>

pkgname=kde-plasma-themes-androbit
pkgver=20120507
_pkgver=2012may07
pkgrel=1
pkgdesc='A modern theme for KDE4 plasma desktop'
arch=('any')
url='http://kde-look.org/content/show.php/Androbit+(KDE+4.6+compatibility)?content=123524'
license=('GPL')
depends=('kdebase-workspace')
source=("http://androbit.org/downloads/androbit_plasma_theme_${_pkgver}.tar.gz")
md5sums=('c104cc9794515b5451b2334f219c4e45')

build() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/apps/desktoptheme/androbit"
  rm "androbit_plasma_theme_${_pkgver}.tar.gz"
  cp -r * "${pkgdir}/usr/share/apps/desktoptheme/androbit/"
}
